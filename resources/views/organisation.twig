{%  extends 'templates/layout.twig' %}
{%  block content %}

    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <h1>{{ orgList.name }}</h1>
            <table class="table">
                <tbody>
                {% if UserController.user.role > 2 %}
                    <tr>
                        <th>Address</th>
                        <td>{{ orgList.address }}</td>
                    </tr>
                    <tr>
                        <th>Town</th>
                        <td>{{ orgList.town }}</td>
                    </tr>
                    <tr>
                        <th>Postcode</th>
                        <td>{{ orgList.postcode }}</td>
                    </tr>
                    <tr>
                        <th>Country</th>
                        <td>{{ orgList.country }}</td>
                    </tr>
                    <tr>
                        <th>Telephone</th>
                        <td>{{ orgList.phone }}</td>
                    </tr>
                </tbody>
            </table>
                {% else %}
                    <form action="{{ path_for('organisation.update') }}" method="post">
                        <input type="hidden" name="id" value="{{ orgList.id }}">
                        <div class="form-group {{ errors.address ? 'has-error' : '' }}">
                            <label for="address">Address</label>
                            <input class="form-control" type="text" name="address" id="address" value="{{ orgList.address }}">
                            {% if errors.town %}
                                <span class="help-block">{{ errors.address | first }}</span>
                            {%  endif %}
                        </div>
                        <div class="form-group {{ errors.town ? 'has-error' : '' }}">
                            <label for="town">Town</label>
                            <input class="form-control" type="text" name="town" id="town" value="{{ orgList.town }}">
                            {% if errors.town %}
                                <span class="help-block">{{ errors.town | first }}</span>
                            {%  endif %}
                        </div>
                        <div class="form-group {{ errors.postcode ? 'has-error' : '' }}">
                            <label for="postcode">Postcode</label>
                            <input class="form-control" type="text" name="postcode" id="postcode" value="{{ orgList.postcode }}">
                            {% if errors.postcode %}
                                <span class="help-block">{{ errors.postcode | first }}</span>
                            {%  endif %}
                        </div>
                        <div class="form-group {{ errors.country ? 'has-error' : '' }}">
                            <label for="country">Country</label>
                            <input class="form-control" type="text" name="country" id="country" value="{{ orgList.country }}">
                            {% if errors.country %}
                                <span class="help-block">{{ errors.country | first }}</span>
                            {%  endif %}
                        </div>
                        <div class="form-group {{ errors.phone ? 'has-error' : '' }}">
                            <label for="phone">Telephone</label>
                            <input class="form-control" type="tel" name="phone" id="phone" value="{{ orgList.phone }}">
                            {% if errors.phone %}
                                <span class="help-block">{{ errors.phone | first }}</span>
                            {%  endif %}
                        </div>
                        <button type="submit" class="btn btn-default">Submit</button>
                    </form>
                    {% endif %}
        </div>
    </div>
{% endblock %}