{%  extends 'templates/layout.twig' %}
{%  block content %}

    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <h1>New Employee</h1>
                <form action="{{ path_for('user.insert') }}" method="post">
                    <div class="form-group {{ errors.firstname ? 'has-error' : '' }}">
                        <label for="firstname">First name</label>
                        <input class="form-control" type="text" name="firstname" id="firstname" value="{{ old.firstname }}">
                        {% if errors.firstname %}
                            <span class="help-block">{{ errors.firstname | first }}</span>
                        {%  endif %}
                    </div>
                    <div class="form-group {{ errors.lastname ? 'has-error' : '' }}">
                        <label for="lastname">Last name</label>
                        <input class="form-control" type="text" name="lastname" id="lastname" value="{{ old.lastname }}">
                        {% if errors.lastname %}
                            <span class="help-block">{{ errors.lastname | first }}</span>
                        {%  endif %}
                    </div>
                    <div class="form-group {{ errors.address ? 'has-error' : '' }}">
                        <label for="address">Address</label>
                        <input class="form-control" type="text" name="address" id="address" value="{{ old.address }}">
                        {% if errors.address %}
                            <span class="help-block">{{ errors.address | first }}</span>
                        {%  endif %}
                    </div>
                    <div class="form-group {{ errors.town ? 'has-error' : '' }}">
                        <label for="town">Town</label>
                        <input class="form-control" type="text" name="town" id="town" value="{{ old.town }}">
                        {% if errors.town %}
                            <span class="help-block">{{ errors.town | first }}</span>
                        {%  endif %}
                    </div>
                    <div class="form-group {{ errors.postcode ? 'has-error' : '' }}">
                        <label for="postcode">Postcode</label>
                        <input class="form-control" type="tel" name="postcode" id="postcode" value="{{ old.postcode }}">
                        {% if errors.postcode %}
                            <span class="help-block">{{ errors.postcode | first }}</span>
                        {%  endif %}
                    </div>
                    <div class="form-group {{ errors.country ? 'has-error' : '' }}">
                        <label for="country">Country</label>
                        <input class="form-control" type="tel" name="country" id="country" value="{{ old.country }}">
                        {% if errors.country %}
                            <span class="help-block">{{ errors.country | first }}</span>
                        {%  endif %}
                    </div>
                    <div class="form-group {{ errors.phone ? 'has-error' : '' }}">
                        <label for="phone">Telephone</label>
                        <input class="form-control" type="tel" name="phone" id="phone" value="{{ old.phone }}">
                        {% if errors.phone %}
                            <span class="help-block">{{ errors.phone | first }}</span>
                        {%  endif %}
                    </div>
                    <div class="form-group {{ errors.email ? 'has-error' : '' }}">
                        <label for="email">Email</label>
                        <input class="form-control" type="tel" name="email" id="email" value="{{ old.email }}">
                        {% if errors.email %}
                            <span class="help-block">{{ errors.email | first }}</span>
                        {%  endif %}
                    </div>
                    <div class="form-group {{ errors.empID ? 'has-error' : '' }}">
                        <label for="empID">Employee ID</label>
                        <input class="form-control" type="tel" name="empID" id="empID" value="{{ old.empID }}">
                        {% if errors.empID %}
                            <span class="help-block">{{ errors.empID | first }}</span>
                        {%  endif %}
                    </div>
                    <div class="form-group {{ errors.password ? 'has-error' : '' }}">
                        <label for="password">Password</label>
                        <input class="form-control" type="tel" name="password" id="password" value="{{ old.password }}">
                        {% if errors.password %}
                            <span class="help-block">{{ errors.password | first }}</span>
                        {%  endif %}
                    </div>
                    <div class="form-group {{ errors.role ? 'has-error' : '' }}">
                        <label for="role">Role</label>{{ RoleController.test }}
                        <select class="form-control" name="role">
                            <option></option>
                            {% for role in roles %}
                                <option value="{{ role.id }}">{{ role.role }}</option>
                            {% endfor %}
                        </select>
                        {% if errors.role %}
                            <span class="help-block">{{ errors.role | first }}</span>
                        {%  endif %}
                    </div>
                    <div class="form-group {{ errors.organisation ? 'has-error' : '' }}">
                        <label for="organisation">Organisation</label>
                        <select class="form-control" name="organisation">
                            <option></option>
                            {% for organisation in organisations %}
                                <option value="{{ organisation.id }}">{{ organisation.name }}</option>
                            {% endfor %}
                        </select>
                        {% if errors.organisation %}
                            <span class="help-block">{{ errors.organisation | first }}</span>
                        {%  endif %}
                    </div>
                    <div class="form-group {{ errors.dob ? 'has-error' : '' }}">
                        <label for="dob">DOB</label>
                        <input class="form-control" type="tel" name="dob" id="dob" value="{{ old.dob }}">
                        {% if errors.dob %}
                            <span class="help-block">{{ errors.dob | first }}</span>
                        {%  endif %}
                    </div>
                    <div class="form-group {{ errors.probation ? 'has-error' : '' }}">
                        <label for="probation">Probation</label>
                        <input class="form-control" type="checkbox" name="probation" id="probation" value="{{ old.probation }}">
                        {% if errors.probation %}
                            <span class="help-block">{{ errors.probation | first }}</span>
                        {%  endif %}
                    </div>
                    <button type="submit" class="btn btn-default">Submit</button>
                </form>
        </div>
    </div>
{% endblock %}