{%  extends 'templates/layout.twig' %}
{%  block content %}

    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <h1>New Organisation</h1>
            <form action="{{ path_for('organisation.insert') }}" method="post">
                <div class="form-group {{ errors.name ? 'has-error' : '' }}">
                    <label for="address">Name</label>
                    <input class="form-control" type="text" name="name" id="name" value="{{ old.name }}">
                    {% if errors.name %}
                        <span class="help-block">{{ errors.name | first }}</span>
                    {%  endif %}
                </div>
                <div class="form-group {{ errors.address ? 'has-error' : '' }}">
                    <label for="address">Address</label>
                    <input class="form-control" type="text" name="address" id="address" value="{{ old.address }}">
                    {% if errors.address %}
                        <span class="help-block">{{ errors.address | first }}</span>
                    {%  endif %}
                </div>
                <div class="form-group {{ errors.town ? 'has-error' : '' }}">
                    <label for="town">Town</label>
                    <input class="form-control" type="text" name="town" id="town" value="{{ old.town }}">
                    {% if errors.town %}
                        <span class="help-block">{{ errors.town | first }}</span>
                    {%  endif %}
                </div>
                <div class="form-group {{ errors.postcode ? 'has-error' : '' }}">
                    <label for="postcode">Postcode</label>
                    <input class="form-control" type="text" name="postcode" id="postcode" value="{{ old.postcode }}">
                    {% if errors.postcode %}
                        <span class="help-block">{{ errors.postcode | first }}</span>
                    {%  endif %}
                </div>
                <div class="form-group {{ errors.country ? 'has-error' : '' }}">
                    <label for="country">Country</label>
                    <input class="form-control" type="text" name="country" id="country" value="{{ old.country }}">
                    {% if errors.country %}
                        <span class="help-block">{{ errors.country | first }}</span>
                    {%  endif %}
                </div>
                <div class="form-group {{ errors.phone ? 'has-error' : '' }}">
                    <label for="phone">Telephone</label>
                    <input class="form-control" type="tel" name="phone" id="phone" value="{{ old.phone }}">
                    {% if errors.phone %}
                        <span class="help-block">{{ errors.phone | first }}</span>
                    {%  endif %}
                </div>
                <button type="submit" class="btn btn-default">Submit</button>
            </form>
        </div>
    </div>
{% endblock %}