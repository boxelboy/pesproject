{%  extends 'templates/layout.twig' %}
{%  block content %}

    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <table class="table">
                <thead>
                <tr>
                    <th>Name</th>
                    <th>Telephone</th>
                </tr>
                </thead>
                <tbody>
                {%  for org in orgList %}
                    <tr>
                        <td>{{ org.name }}</td>
                        <td>{{ org.telephone }}</td>
                        <td><a href="organisation/amend/{{ org.id }}">Amend</a></td>
                        {% if UserController.user.organisation != org.id %}
                            <td><a href="organisation/delete/{{ org.id }}">Delete</a></td>
                        {% endif %}
                    </tr>
                {%  endfor %}
                </tbody>
            </table>

        </div>
    </div>
{% endblock %}