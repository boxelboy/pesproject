{%  extends 'templates/layout.twig' %}
{%  block content %}

        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class="panel panel-default">
                    <div class="panel-heading">Login</div>
                    <div class="panel-body">
                        <form action="{{ path_for('login.user') }}" method="post">
                            <div class="form-group {{ errors.email ? 'has-error' : '' }}">
                                <label for="email">Email</label>
                                <input class="form-control" type="email" name="email" id="email" placeholder="you@domain.com" value="{{ old.email }}">
                                {% if errors.email %}
                                    <span class="help-block">{{ errors.email | first }}</span>
                                {%  endif %}
                            </div>
                            <div class="form-group {{ errors.password ? 'has-error' : '' }}">
                                <label for="password">Password</label>
                                <input class="form-control" type="password" name="password" id="password">
                                {% if errors.password %}
                                    <span class="help-block">{{ errors.password | first }}</span>
                                {%  endif %}
                            </div>
                            <button type="submit" class="btn btn-default">Login</button>
                        </form>
                    </div>
                </div>

            </div>
        </div>
{% endblock %}